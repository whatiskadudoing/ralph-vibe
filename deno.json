{
  "name": "@ralph/cli",
  "version": "0.1.0-beta",
  "license": "MIT",
  "exports": "./src/mod.ts",

  "tasks": {
    "dev": "deno run --allow-all src/mod.ts",
    "dev:watch": "deno run --watch --allow-all src/mod.ts",
    "test": "deno test --allow-all --parallel",
    "test:watch": "deno test --allow-all --watch",
    "test:coverage": "deno test --allow-all --coverage=coverage && deno coverage coverage",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "fmt:check": "deno fmt --check",
    "check": "deno check src/mod.ts",
    "compile": "deno compile --allow-all --output=dist/ralph src/mod.ts",
    "compile:all": "deno task compile:macos && deno task compile:linux && deno task compile:windows",
    "compile:macos": "deno compile --allow-all --target=aarch64-apple-darwin --output=dist/ralph-macos-arm64 src/mod.ts",
    "compile:linux": "deno compile --allow-all --target=x86_64-unknown-linux-gnu --output=dist/ralph-linux-x64 src/mod.ts",
    "compile:windows": "deno compile --allow-all --target=x86_64-pc-windows-msvc --output=dist/ralph-windows-x64.exe src/mod.ts",
    "ci": "deno task fmt:check && deno task lint && deno task check && deno task test",
    "install": "deno task compile && mkdir -p $HOME/.deno/bin && cp dist/ralph $HOME/.deno/bin/ralph",
    "uninstall": "rm -f $HOME/.deno/bin/ralph"
  },

  "imports": {
    "@cliffy/command": "jsr:@cliffy/command@1.0.0-rc.7",
    "@cliffy/prompt": "jsr:@cliffy/prompt@1.0.0-rc.7",
    "@cliffy/ansi": "jsr:@cliffy/ansi@1.0.0-rc.7",
    "@std/fs": "jsr:@std/fs@1.0.0",
    "@std/path": "jsr:@std/path@1.0.0",
    "@std/assert": "jsr:@std/assert@1.0.0",
    "@std/testing": "jsr:@std/testing@1.0.0",
    "@std/fmt": "jsr:@std/fmt@1.0.0",

    "@/": "./src/",
    "@core/": "./src/core/",
    "@services/": "./src/services/",
    "@ui/": "./src/ui/",
    "@cli/": "./src/cli/",
    "@utils/": "./src/utils/"
  },

  "fmt": {
    "indentWidth": 2,
    "lineWidth": 100,
    "singleQuote": true,
    "proseWrap": "preserve",
    "include": ["src/", "tests/"]
  },

  "lint": {
    "rules": {
      "tags": ["recommended"],
      "include": [
        "ban-untagged-todo",
        "camelcase",
        "default-param-last",
        "eqeqeq",
        "explicit-function-return-type",
        "explicit-module-boundary-types",
        "no-const-assign",
        "no-eval",
        "no-implicit-declare-namespace-export",
        "no-non-null-asserted-optional-chain",
        "no-non-null-assertion",
        "no-self-compare",
        "no-throw-literal",
        "single-var-declarator"
      ]
    },
    "include": ["src/", "tests/"]
  },

  "test": {
    "include": ["tests/"]
  },

  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true
  }
}
